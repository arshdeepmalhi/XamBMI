<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="BMI Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtBMI"
        android:textSize="26dip"
        android:background="#ff24feca"
        android:textColor="#fff02417"
        android:textAlignment="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Weight(KG)"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="#ff24feca"
            android:textColor="#fff02417"
            android:textSize="26dip"
            android:id="@+id/textView1"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" />
        <EditText
            android:layout_width="263.0dip"
            android:layout_height="match_parent"
            android:id="@+id/txtWeight"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:hint="Enter your Weight in KG" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="Height(M)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff24feca"
            android:textColor="#fff02417"
            android:textSize="26dip"
            android:id="@+id/textView2"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"/>
        <EditText
            android:layout_width="263.0dip"
            android:layout_height="match_parent"
            android:id="@+id/txtHeight"
            android:hint="Enter  Height in Meter."
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <TextView
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff24feca"
            android:textColor="#fff02417"
            android:textSize="26dip"
            android:id="@+id/textView1"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip" 
            android:layout_marginRight="10dip"/>
        <EditText
            android:layout_width="263.0dip"
            android:layout_height="match_parent"
            android:id="@+id/txtResult"
            android:text=""
            android:layout_marginRight="10dip"
             android:layout_marginLeft="10dip"/>
    </LinearLayout>
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCalculate"
        android:background="#ff1de9b6"
        android:textColor="#fff02417"
        android:textSize="18dip"
         android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"/>
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMessage"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="9dip"
        android:layout_marginRight="20dip"
        android:textSize="20dip" />
    <ImageView
        android:src="@drawable/download"
        android:layout_width="match_parent"
        android:layout_height="113.0dp"
        android:id="@+id/imageView1" />

</LinearLayout>